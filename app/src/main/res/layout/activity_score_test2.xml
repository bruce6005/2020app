                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#56b6b7"
                    android:layout_gravity="center"
                    android:id="@+id/relative_layout">
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:background="@drawable/green_btn"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/get_all"
                        android:text="全部資料"
                        android:textColor="#ffffff"
                        >

                    </Button>



                    <Button
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:id="@+id/search_user"
                        android:background="@drawable/green_btn"
                        android:layout_marginRight="15dp"
                        android:text="以用戶搜尋"
                        android:textColor="#ffffff"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@+id/get_all">
                    </Button>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:id="@+id/kill_id"
                        android:text="刪除用戶資料"
                        android:textColor="#ffffff"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/green_btn"
                        android:layout_toRightOf="@+id/search_user">
                    </Button>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:id="@+id/add_data"
                        android:text="新增用戶資料"
                        android:textColor="#ffffff"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/green_btn"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/get_all">
                    </Button>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:id="@+id/clear_all"
                        android:layout_marginRight="15dp"
                        android:text="清除全部資料"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@+id/add_data"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/green_btn"
                        android:layout_below="@+id/search_user">
                    </Button>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:id="@+id/vibrate"
                        android:text="下一頁"
                        android:textColor="#ffffff"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/clear_all"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/kill_id"
                        android:background="@drawable/green_btn">
                    </Button>
